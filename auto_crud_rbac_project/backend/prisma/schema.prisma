datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      String
  createdAt DateTime @default(now())
}

model ModelFile {
  id        String   @id @default(uuid())
  name      String   @unique
  filePath  String
  content   Json
  createdAt DateTime @default(now())
}

model Record {
  id        String   @id @default(uuid())
  modelName String
  data      Json
  ownerId   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
